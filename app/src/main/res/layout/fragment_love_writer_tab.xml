<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loveGeneratorCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love_generator_bg"
    tools:context=".lovetabs.ui.main.writer.LoveWriterFragment">

    <EditText
        android:id="@+id/loveOpenerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/love_writer_short_edit_text_max_height"
        android:layout_marginTop="50dp"
        android:hint="@string/hint_love_opener"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/lovePhraseEditText"
        app:layout_constraintStart_toStartOf="@+id/lovePhraseEditText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/loveOpenerSenderBtn"
        android:layout_width="@dimen/main_tabs_buttons_width"
        android:layout_height="@dimen/main_tabs_buttons_height"
        android:layout_marginTop="@dimen/love_writer_tab_send_button_margin_top"
        android:text="@string/btn_title_send"
        android:textColor="@color/white"
        android:background="@drawable/main_tabs_empty_button"
        android:paddingBottom="@dimen/main_tabs_empty_btn_text_padding"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="@+id/loveOpenerEditText"
        app:layout_constraintStart_toStartOf="@+id/loveOpenerEditText"
        app:layout_constraintTop_toBottomOf="@+id/loveOpenerEditText" />

    <EditText
        android:id="@+id/lovePhraseEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="190dp"
        android:layout_marginTop="@dimen/love_writer_tab_edit_text_margin_top"
        android:hint="@string/love_phrase_hint"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:backgroundTint="@color/white"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loveOpenerSenderBtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/lovePhraseSendBtn"
        android:layout_width="@dimen/main_tabs_buttons_width"
        android:layout_height="@dimen/main_tabs_buttons_height"
        android:layout_marginTop="@dimen/love_writer_tab_send_button_margin_top"
        android:text="@string/btn_title_send"
        android:textColor="@color/white"
        android:background="@drawable/main_tabs_empty_button"
        android:paddingBottom="@dimen/main_tabs_empty_btn_text_padding"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="@+id/lovePhraseEditText"
        app:layout_constraintStart_toStartOf="@+id/lovePhraseEditText"
        app:layout_constraintTop_toBottomOf="@+id/lovePhraseEditText" />

    <EditText
        android:id="@+id/loveClosureEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/love_writer_tab_edit_text_margin_top"
        android:hint="@string/hint_love_closure"
        android:maxHeight="@dimen/love_writer_short_edit_text_max_height"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lovePhraseSendBtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/loveClosureSendBtn"
        android:layout_width="@dimen/main_tabs_buttons_width"
        android:layout_height="@dimen/main_tabs_buttons_height"
        android:layout_marginTop="@dimen/love_writer_tab_send_button_margin_top"
        android:background="@drawable/main_tabs_empty_button"
        android:fontFamily="sans-serif-black"
        android:paddingBottom="@dimen/main_tabs_empty_btn_text_padding"
        android:text="@string/btn_title_send"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/loveClosureEditText"
        app:layout_constraintStart_toStartOf="@+id/loveClosureEditText"
        app:layout_constraintTop_toBottomOf="@+id/loveClosureEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>