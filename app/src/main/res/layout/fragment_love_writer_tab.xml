<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loveGeneratorCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love_generator_bg"
    tools:context=".lovewritingtabs.ui.main.LoveWriterFragment">

    <EditText
        android:id="@+id/loveOpenerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/hint_love_opener"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/lovePhraseEditText"
        app:layout_constraintStart_toStartOf="@+id/lovePhraseEditText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/loveOpenerSenderBtn"
        android:layout_width="@dimen/main_tabs_buttons_size"
        android:layout_height="@dimen/main_tabs_buttons_size"
        android:layout_marginTop="16dp"
        android:background="@drawable/send_btn"
        app:layout_constraintEnd_toEndOf="@+id/loveOpenerEditText"
        app:layout_constraintStart_toStartOf="@+id/loveOpenerEditText"
        app:layout_constraintTop_toBottomOf="@+id/loveOpenerEditText" />

    <EditText
        android:id="@+id/lovePhraseEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="@string/love_phrase_hint"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loveOpenerSenderBtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/lovePhraseSendBtn"
        android:layout_width="@dimen/main_tabs_buttons_size"
        android:layout_height="@dimen/main_tabs_buttons_size"
        android:layout_marginTop="16dp"
        android:background="@drawable/send_btn"
        app:layout_constraintEnd_toEndOf="@+id/lovePhraseEditText"
        app:layout_constraintStart_toStartOf="@+id/lovePhraseEditText"
        app:layout_constraintTop_toBottomOf="@+id/lovePhraseEditText" />

    <EditText
        android:id="@+id/loveClosureEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="@string/hint_love_closure"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lovePhraseSendBtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/loveClosureSendBtn"
        android:layout_width="@dimen/main_tabs_buttons_size"
        android:layout_height="@dimen/main_tabs_buttons_size"
        android:layout_marginTop="16dp"
        android:background="@drawable/send_btn"
        app:layout_constraintEnd_toEndOf="@+id/loveClosureEditText"
        app:layout_constraintStart_toStartOf="@+id/loveClosureEditText"
        app:layout_constraintTop_toBottomOf="@+id/loveClosureEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>