<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<!--    <PreferenceCategory app:title="@string/prefs_main_header">-->

        <EditTextPreference
            android:inputType="number"
            android:digits="0123456789"
            android:key="@string/pref_key_number_of_love_phrases"
            app:title="@string/pref_title_number_of_love_phrases"
            android:defaultValue="3"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:useSimpleSummaryProvider="true" />


        <EditTextPreference
            android:inputType="phone"
            android:key="@string/pref_key_target_phone_number"
            app:title="@string/pref_title_target_phone_number"
            android:defaultValue=" "
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:useSimpleSummaryProvider="true" />

<!--    </PreferenceCategory>-->

</PreferenceScreen>
